@model IEnumerable<FinalExam.Models.Question>

@{
    ViewBag.Title = "Play";
}

<h2>Play</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.CategoryDesc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryDesc)
        </td>
        
        <td>
            @Html.ActionLink("Answer Question", "Answer", new { id=item.QuestionID })
        </td>
    </tr>
}

</table>
